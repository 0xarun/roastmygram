# ========================================
# Roast My Insta - Environment Variables
# ========================================

# Environment
NODE_ENV=development
# NODE_ENV=production

# Server Configuration
PORT=5000
# PORT=10000 (for Render)

# ========================================
# MongoDB Configuration
# ========================================

# Development (Local MongoDB)
MONGODB_URI=mongodb://localhost:27017/roastmygram

# Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/roastmygram

# ========================================
# Frontend URLs (for CORS)
# ========================================

# Development
FRONTEND_URL=http://localhost:3000

# Production
# FRONTEND_URL=https://roastmygram.fun

# ========================================
# Backend URL (for Render deployment)
# ========================================

# Production (Render URL)
# BACKEND_URL=https://your-backend-name.onrender.com

# ========================================
# Rate Limiting Configuration
# ========================================

# Rate limit window (15 minutes in milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Instagram Scraping Configuration
# ========================================

# Using free third-party Instagram scraper service
# No API key required - completely free

# Cache timeout (1 hour in milliseconds)
CACHE_TIMEOUT=3600000

# ========================================
# Security Configuration
# ========================================

# Enable/disable security headers
ENABLE_HELMET=true

# Enable/disable CORS
ENABLE_CORS=true

# ========================================
# Logging Configuration
# ========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

